{
  "name": "termina",
  "version": "2.0.0",
  "description": "Modern terminal emulator with AI integration - Warp-like design for macOS and Linux",
  "main": "main.js",
  "scripts": {
    "start": "electron .",
    "dev": "NODE_ENV=development electron .",
    "icons": "node build/generate-icons.js",
    "build": "npm run icons && electron-builder",
    "build:mac": "npm run icons && electron-builder --mac",
    "build:win": "npm run icons && electron-builder --win",
    "build:linux": "npm run icons && electron-builder --linux",
    "build:all": "npm run icons && electron-builder --mac --win --linux",
    "dist": "npm run icons && electron-builder --publish=never",
    "test": "echo \"Error: no test specified\" && exit 1"
  },
  "keywords": [
    "terminal",
    "emulator",
    "ai",
    "warp",
    "modern",
    "electron"
  ],
  "author": "Termina Team",
  "license": "MIT",
  "type": "commonjs",
  "dependencies": {
    "@xterm/addon-fit": "^0.10.0",
    "xterm": "^5.3.0",
    "xterm-addon-fit": "^0.8.0"
  },
  "devDependencies": {
    "electron": "^37.3.1",
    "electron-builder": "^24.13.3",
    "icon-gen": "^4.0.0",
    "png-to-ico": "^2.1.8",
    "sharp": "^0.33.5"
  },
  "build": {
    "appId": "com.termina.app",
    "productName": "Termina",
    "directories": {
      "output": "dist"
    },
    "files": [
      "main.js",
      "preload.js",
      "src/**/*",
      "renderer/**/*",
      "assets/**/*",
      "node_modules/**/*"
    ],
    "mac": {
      "icon": "build/icon.icns",
      "category": "public.app-category.developer-tools",
      "target": "dmg"
    },
    "linux": {
      "icon": "build/icon.png",
      "target": "AppImage"
    },
    "win": {
      "icon": "build/icon.ico",
      "target": "nsis"
    }
  }
}
